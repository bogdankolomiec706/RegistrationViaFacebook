@using RadaCode.Models
@model ExternalRegisterViewModel
@{
    ViewBag.Title = "Register confirmation";
}
@using (Html.BeginForm("ExternalRegisterConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Register confirmation</h4>
    if (TempData["ModelStateMessage"] != null)
    {
        <h5 style="color:red;">@TempData["ModelStateMessage"]</h5>
    }
    if (TempData["IdentityMessage"] != null)
    {
        <h5 style="color:red;">@TempData["IdentityMessage"]</h5>
    }
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })


    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-12">
        Enter your phone with code. For example: +380643840930
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Continue" />
        </div>
    </div>
}

